             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="./Themes/TrackCard.xaml" />
                <ResourceDictionary Source="./Themes/СhannelCard.xaml" />
